{
  "headers": [
    {
      "key": "Access-Control-Allow-Origin",
      "value": "*"  // 允许的域名，或设为 "*"（允许所有域名）
    },
    {
      "key": "Access-Control-Allow-Methods",
      "value": "GET, POST, OPTIONS"       // 允许的 HTTP 方法
    },
    {
      "key": "Access-Control-Allow-Headers",
      "value": "Content-Type, Authorization"  // 允许的自定义请求头
    },
    {
      "key": "Access-Control-Allow-Credentials",
      "value": "true"  // 是否允许携带凭证（如 Cookie），需与具体域名配合使用
    }
  ]
}
{
  "headers": [
    // 针对所有字体文件
    {
      "path": "/fonts/*",  // 假设字体存放在 /fonts 目录
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://your-client.com" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS" }
      ]
    },
    // 其他资源（如图片）可单独配置
    {
      "path": "/images/*",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ]
}